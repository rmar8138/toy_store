
<h1><%= @manufacturer["name"] %></h1>
<h2><%= @manufacturer["location"] %></h2>

<ul>
  <% @manufacturer.toys.each do |toy| %>
    <li>
      <h3><%= toy.name %></h3>
      <h4>User: <%= toy.user.email %></h4>
      <p><%= toy.description %></p>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_manufacturer_path %>
<%= link_to 'Delete', manufacturer_path(@manufacturer),
    method: :delete,
    data: { confirm: "Are you sure?" }%>
<%= link_to 'Back', manufacturers_path %>